<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bookaholicc.partner">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_shadow"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <uses-permission android:name="android.permission.CAMERA" />
        <uses-feature android:name="android.hardware.camera" />
        <uses-feature android:name="android.hardware.camera" />
        <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
        <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
        <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>


        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.FirstActivity"/>
        <activity android:name=".Activity.ProfileActivity"/>
        <activity android:name=".Activity.EarningsActivity"/>
        <activity android:name=".Activity.SignUpActivity"/>
        <activity android:name=".Activity.BooksActivity"/>
        <activity android:name=".Activity.NotifcationsActivity"/>
        <activity android:name=".Activity.AboutUsActivity"/>
        <activity android:name=".Activity.ReferFriendsActivity"/>
        <activity android:name=".Activity.AddBooksActivity"/>

    </application>

</manifest>