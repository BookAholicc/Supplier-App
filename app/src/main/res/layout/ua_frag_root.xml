<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apep="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:weightSum="1"
    android:background="@color/my_black"
    android:id="@+id/ua_root"
    android:layout_height="match_parent">
    
    <ImageView
        android:layout_width="200dp"
        android:id="@+id/ua_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="200dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
      android:layout_below="@+id/ua_image"
        android:weightSum="1"
        android:layout_marginTop="120dp"
        android:layout_gravity="bottom"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:text="Sign In"
            android:layout_marginLeft="16dp"
            android:textSize="22sp"
            android:layout_marginRight="16dp"
            android:id="@+id/ua_login_button"
            android:background="@drawable/signup_button_ripple"
            android:textAllCaps="false"
            android:textColor="@color/material_red50"
            android:layout_height="60dp">
        </Button>

        <Button
            android:id="@+id/ua_signup_button"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_weight="0.5"
            android:layout_marginRight="16dp"
            android:background="@drawable/signup_button_ripple"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textColor="@color/material_red50"

            android:textSize="22sp" />


    </LinearLayout>
   


</RelativeLayout>