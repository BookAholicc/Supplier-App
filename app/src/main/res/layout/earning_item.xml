<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="100dp"
            android:id="@+id/earning_item_image"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/earning_item_pname"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:text="The Sapiens  -Brief History of Huma"
            android:layout_toEndOf="@+id/earning_item_image"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/earning_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="22sp"
            android:layout_marginTop="12dp"
            android:text="119"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/earning_item_pname" />

        <TextView
            android:id="@+id/earning_item_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/earning_item_price"
            android:layout_marginTop="8dp"

            android:layout_toEndOf="@+id/earning_item_pname"
            android:gravity="center"
            android:text="2 Weeks" />
    </RelativeLayout>

</android.support.v7.widget.CardView>