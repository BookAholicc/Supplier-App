<?xml version="1.0" encoding="utf-8"?>

<FrameLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/my_black"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <com.bookaholicc.partner.CustomUI.WhitenyBooksFont
        android:layout_width="match_parent"
        android:text="We are really Happy , you chose bookaholic"
        android:gravity="center"
        android:textSize="22sp"
        android:textColor="@color/material_white"
        android:id="@+id/welcome_text"
        android:layout_marginTop="80dp"
        android:layout_height="wrap_content" />


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:id="@+id/reg_fi_tip"
        android:hint="First Name"
        android:textColorHighlight="@color/material_white"
        android:layout_below="@+id/welcome_text"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/material_white"
        style="@style/tip_default"
        android:layout_height="60dp">
        <EditText
            android:id="@+id/first_name_box"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:textColorHighlight="@color/material_white"
            style="@style/edit_box"
            android:textColor="@color/material_white"

            android:inputType="textPersonName"
          />

    </android.support.design.widget.TextInputLayout>


   <android.support.design.widget.TextInputLayout
       android:layout_width="match_parent"
       android:id="@+id/reg_lastname_tip"
       android:hint="Last Name"
       android:textColorHint="@color/material_white"
       android:layout_marginTop="20dp"
       style="@style/tip_default"
       android:textColorHighlight="@color/material_white"
       android:layout_below="@id/reg_fi_tip"
       android:layout_height="60dp">
       <EditText
           android:id="@+id/pass_box"
           android:textColorHighlight="@color/material_white"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:textColor="@color/material_white"
           style="@style/edit_box" />
   </android.support.design.widget.TextInputLayout>
    <com.bookaholicc.partner.CustomUI.WhitenyBooksFont
        android:layout_width="wrap_content"
        android:text="@string/tc"
        android:layout_above="@+id/name_submit_button"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:maxLines="2"
        android:textColor="@color/material_grey500"

        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_height="wrap_content" />


    <!--todo remove Bottom AlignMent-->
    <Button
        android:layout_width="match_parent"
        android:id="@+id/name_submit_button"
        android:text="Next"
        android:textColor="@color/material_grey100"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        style="@style/login_button"
        android:layout_height="60dp" />
</RelativeLayout>

</FrameLayout>