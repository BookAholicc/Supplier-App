<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/home_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="91dp"
        android:textSize="30sp"
        android:text="3200" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Monthly Payout"
        android:layout_below="@+id/home_amount"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/home_tot_p_text"
        android:layout_width="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="61dp"
        android:text="Total Products With BookAholic"
        android:layout_below="@+id/textView3"
        android:layout_toStartOf="@+id/home_amount" />

    <TextView
        android:id="@+id/home_total_p_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="82"
        android:gravity="center"
        android:layout_marginRight="32dp"
        android:layout_alignTop="@+id/home_tot_p_text"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/home_tot_p_text" />

    <TextView
        android:id="@+id/home_p_exchanged"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/home_tot_p_text"
        android:layout_below="@+id/home_tot_p_text"
        android:layout_marginTop="61dp"
        android:text="Products Exchanged " />

    <TextView
        android:id="@+id/home_p_exchnaged_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/home_total_p_val"
        android:layout_alignTop="@+id/home_p_exchanged"
        android:text="45" />

    <TextView
        android:id="@+id/home_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:text="August 2017" />

    <Button
        android:id="@+id/home_bill_breakdown"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_p_exchanged"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:text="See Earnings Breakdown" />

</RelativeLayout>